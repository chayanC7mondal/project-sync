# Court Management System Environment Variables

# Database
MONGO_URI=mongodb+srv://your-atlas-connection-string
MONGO_DB_NAME=court_management

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# SMS Configuration
ENABLE_SMS=true

# TextBelt (Free - 1 SMS per day per IP, or paid plan)
TEXTBELT_KEY=textbelt

# Fast2SMS (Indian SMS service - free tier available)
SMS_GATEWAY_API_KEY=your-fast2sms-api-key

# Email Configuration (Gmail SMTP)
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# Alternative Email Services
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASS=your-email-password

# Notification Settings
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_DELAY_MINUTES=5

# Scheduler Settings  
REMINDER_CHECK_INTERVAL=3600000
ABSENCE_CHECK_INTERVAL=7200000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log